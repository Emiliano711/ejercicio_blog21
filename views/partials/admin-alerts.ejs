<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script>
  let deleteLink = document.querySelector(".btn.btn-danger");
  deleteLink.addEventListener("click", async (event) => {
    event.preventDefault();
    await alertify.confirm(
      "Eliminar artículo",
      "¿Seguro que quieres eliminar este artículo?",
      async function () {
        await alertify.success("Artículo eliminado");
        return (window.location.href = deleteLink.href);
      },
      async function () {
        await alertify.error("Cancelado");
      },
    );
  });
</script>
