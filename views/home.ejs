<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/home-style.css" />
    <%-include("partials/bsLink")%>
  </head>
  <body>
    <div class="container">
      <%-include("partials/NavBar")%>

      <div class="text-center col-12 col-lg-12 align-items-center" id="img2">
        <img
          src="../img/ian-dooley-DJ7bWa-Gwks-unsplash.jpg"
          id="home-img"
          class="img-fluid"
          alt="..."
        />
      </div>

      <div class="container col-12 justify-content-center">
        <div class="container">
          <ul class="list-unstyled justify-content-center col-lg-12">
            <% let count=0 %> <%for (const article of articles){ count++%> <%if (count >= 5) {%> <%
            break;%><%} else {%>
            <li class="d-flex justify-content-center">
              <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="<%=article.img%>" class="img-fluid rounded-start" alt="articleImg" />
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">
                        <a class="text-reset text-decoration-none" href="/articulos/<%=article.id%>"
                          ><h2><%=article.title%></h2></a
                        >
                      </h5>
                      <p class="card-text text-truncate"><%=article.content%></p>
                      <p class="card-text">
                        <small class="text-muted"
                          >Creado por <%=article.user.firstname%> <%=article.user.lastname%> el
                          <%=article.createdAt%></small
                        >
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            <%}%> <%}%>
          </ul>
        </div>
      </div>
    </div>
    <%-include("partials/footer")%> <%-include("partials/bsscript")%>
  </body>
</html>
